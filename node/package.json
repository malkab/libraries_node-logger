{
  "name": "@malkab/node-logger",
  "version": "2.0.0",
  "description": "A convenience wrapper around Winston.",
  "scope": "@malkab",
  "author": {
    "name": "Juan Pedro Perez Alcantara",
    "email": "jp.perez.alcantara@gmail.com",
    "url": "http://me.com"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "log",
    "logging"
  ],
  "license": "UNLICENSED",
  "homepage": "https://github.com/owner/project#readme",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/malkab/code-samples.git"
  },
  "private": false,
  "scripts": {
    "package-json-version": "echo 2021-07-19",
    "clean": "rm -Rf build ; rm -Rf dist",
    "quick-test": "npm-run-all --parallel service:watch:quick-test:server service:build",
    "start": "npm-run-all --parallel service:watch:mocha:server service:build",
    "build": "yarn clean ; yarn service:build-lib",
    "build-with-docs": "yarn clean ; yarn service:build-lib ; yarn build-docs ; rm -Rf docs ; cp -R typedoc/build/html docs",
    "build-docs": "cd typedoc ; ./html ; cd ..",
    "publish-dev": "yarn build ; yarn publish --patch --no-git-tag-version",
    "publish-production": "yarn build-with-docs ; yarn publish --no-git-tag-version",
    "service:build-lib": "webpack --config webpack-production.config.js --progress",
    "service:build": "webpack --progress --watch",
    "service:watch:quick-test:server": "nodemon --inspect=0.0.0.0:9329 \"./build/quicktest.js\" --watch \"./build/quicktest.js\"",
    "service:watch:mocha:server": "nodemon --ext js --watch ./build/ --exec 'mocha --timeout 20000 ./build/mocha.js || true'"
  },
  "engines": {
    "node": "^14.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.10",
    "@types/lodash": "^4.14.160",
    "@types/mocha": "^8.0.3",
    "@types/node": "^16.0.0",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "eslint": "^7.0.0",
    "mocha": "^9.0.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "terser": "^5.2.1",
    "terser-webpack-plugin": "^5.0.0",
    "ts-loader": "^9.0.0",
    "tslib": "^2.0.0",
    "typedoc": "^0.21.0",
    "typescript": "^4.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^4.0.0",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "lodash": "^4.17.20",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  }
}
